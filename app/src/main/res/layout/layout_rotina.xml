<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgview_id"
        android:layout_width="77dp"
        android:layout_height="71dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_tipo_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Tipo"
        app:layout_constraintBottom_toBottomOf="@+id/imgview_id"
        app:layout_constraintStart_toEndOf="@+id/imgview_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tipo_id"
        app:layout_constraintEnd_toStartOf="@+id/tv_dia_id"
        app:layout_constraintStart_toEndOf="@+id/tv_tipo_id"
        app:layout_constraintTop_toTopOf="@+id/tv_tipo_id" />

    <TextView
        android:id="@+id/tv_dia_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dia"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_time_id"
        android:layout_marginRight="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>